.custom-form-field {
  width: 100%; /* Makes the form field take 100% of the container's width */
  height: 40px; /* Set the height of the form field */
  border-radius: 25px; /* Rounds the corners of the form field */
  background-color: transparent; /* Sets the background to transparent */
}

.custom-form-field .mat-form-field-outline {
  border-radius: 25px; /* Rounds the outline border */
  border: 2px solid white; /* Sets a white border color for the outline */
}

.custom-form-field .mat-form-field-outline-start,
.custom-form-field .mat-form-field-outline-end {
  border-color: white; /* Ensure the border color is white */
}

.custom-form-field .mat-form-field-infix {
  height: 100%; /* Ensures the input field stretches to fill the form field */
  padding-left: 20px; /* Adds left padding inside the input field */
}

.custom-form-field input {
  height: 100%; /* Adjust the height of the input field */
  padding: 0 12px; /* Adjust horizontal padding to fit the icon */
  font-size: 14px; /* Control the font size */
  border: none; /* Remove any border around the input field */
  outline: none; /* Remove any outline when the input is focused */
  background-color: transparent; /* Ensures the input background is transparent */
}

.custom-form-field button {
  height: 100%; /* Makes the search button match the height of the input */
  padding: 0; /* Remove padding to align the button properly */
  margin-top: 0; /* Aligns the button properly with the input field */
}

.custom-form-field .mat-icon {
  font-size: 20px; /* Adjust the size of the search icon */
}