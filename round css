/* Custom styles for mat-form-field in MDC */
.custom-form-field {
  width: 100%; /* Full width for the form field */
  background-color: transparent; /* Transparent background */
  padding: 0; /* Remove extra padding around the form field */
}

/* Remove extra space inside the form field wrapper */
.custom-form-field .mat-mdc-form-field-wrapper {
  padding: 0 !important; /* Remove the padding inside the wrapper */
}

/* Customize the outline border for mat-mdc-form-field */
.custom-form-field .mat-mdc-form-field-outline {
  border-radius: 28px; /* Set border-radius to 28px */
  border: 2px solid white !important; /* White border */
}

/* Customize the input field inside the form field */
.custom-form-field .mat-mdc-form-field-infix {
  background-color: transparent !important; /* Transparent background */
  padding-left: 20px; /* Left padding to align the input with the icon */
  height: 100%; /* Ensure the input takes full height */
}

/* Input styling */
.custom-form-field input {
  background-color: transparent !important; /* Transparent background for the input */
  color: white; /* White text color */
  border: none; /* Remove default border */
  outline: none; /* Remove focus outline */
  height: 100%; /* Fill the height of the form field */
  padding-left: 20px; /* Padding for the input */
}

/* Styling the search icon button */
.custom-form-field button {
  height: 100%; /* Button should match the input height */
  padding: 0;
  margin-top: 0;
}

/* Style for the search icon */
.custom-form-field .mat-icon {
  font-size: 20px; /* Icon size */
  color: white; /* White color for the icon */
}